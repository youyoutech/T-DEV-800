<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Paramètres"
        android:background="?attr/colorPrimary"/>

    <TextView
        android:id="@+id/text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pseudonyme"
        android:layout_alignLeft="@+id/edit_username"
        android:layout_alignStart="@+id/edit_username"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/settings_toolbar"/>

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_username"/>

    <TextView
        android:id="@+id/text_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numéro de téléphone"
        android:layout_alignLeft="@+id/edit_username"
        android:layout_alignStart="@+id/edit_username"
        android:layout_below="@+id/edit_username"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edit_phone_number"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_phone_number"/>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edit_phone_number"
        android:layout_marginTop="40dp"
        android:text="Enregistrer"/>



</RelativeLayout>